<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Producto" name="producto">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="DescripciÃ³n" name="descripcion"></textarea>
                </div>
                <div class="mb-3 row">
                    <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen" /></label>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" {{!-- aca nose si va de tipo text --}}
                        placeholder="Valor" name="valor"></textarea>

                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>

            </form>

            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>